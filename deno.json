{
  "tasks": {
    "dev": "deno run --watch --allow-read --env-file=.env --allow-env --allow-net --unsafely-ignore-certificate-errors main.ts",
    "start": "deno run --allow-read --env-file=.env --allow-env --allow-net --unsafely-ignore-certificate-errors main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@types/express": "npm:@types/express@^5.0.0",
    "@types/pg-pool": "npm:@types/pg-pool@^2.0.6",
    "express": "npm:express@^4.21.2",
    "pg-pool": "npm:pg-pool@^3.7.0",
    "~/": "./"
  },
  "compilerOptions": {
    "lib": ["dom","dom.iterable","deno.ns"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["server/"],
    "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
  }
}
